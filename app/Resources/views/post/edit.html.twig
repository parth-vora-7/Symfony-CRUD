{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>Post edit</h1>
    </div>

    {{ form_start(edit_form) }}
    {{ form_errors(edit_form) }}

    <div class="form-group">
        {{ form_label(edit_form.title) }}
        {{ form_errors(edit_form.title) }}
        {{ form_widget(edit_form.title, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.text) }}
        {{ form_errors(edit_form.text) }}
        {{ form_widget(edit_form.text, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="form-group">
        {{ form_label(edit_form.publishedAt) }}
        {{ form_errors(edit_form.publishedAt) }}
        {{ form_widget(edit_form.publishedAt, {'attr': {'class': 'form-control'}}) }}
    </div>
    {{ form_end(edit_form) }}

{% endblock %}
{% extends 'base.html.twig' %}

{% block body %}
    <div class="page-header">
        <h1>Post creation</h1>
    </div>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        {% if form_errors(form.title) %}<div class="alert alert-danger">{{ form_errors(form.title) }}</div> {% endif %}
    </div>

    <div class="form-group">
        {{ form_label(form.text) }}
        {{ form_widget(form.text, {'attr': {'class': 'form-control'}}) }}
        {% if form_errors(form.text) %}<div class="alert alert-danger">{{ form_errors(form.text) }}</div> {% endif %}
    </div>

    <div class="form-group">
        {{ form_label(form.publishedAt) }}
        {{ form_widget(form.publishedAt, {'attr': {'class': 'form-control'}}) }}
        {% if form_errors(form.publishedAt) %}<div class="alert alert-danger">{{ form_errors(form.publishedAt) }}</div> {% endif %}
    </div>

    {{ form_end(form) }}

{% endblock %}
